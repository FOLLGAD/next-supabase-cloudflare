{
	"name": "@polaris/db",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./client": {
			"types": "./dist/client.d.ts",
			"//comment": "https://github.com/reactjs/rfcs/blob/main/text/0227-server-module-conventions.md",
			"react-server": {
				"browser": "./src/web-client.ts",
				"default": "./src/client.ts"
			},
			"//comment2": "https://github.com/reactjs/rfcs/blob/main/text/0227-server-module-conventions.md",
			"react-client": {
				"browser": "./src/web-client.ts",
				"default": "./src/web-client.ts"
			},
			"default": {
				"browser": "./src/web-client.ts",
				"default": "./src/client.ts"
			}
		},
		"./server-client": {
			"types": "./dist/client.d.ts",
			"default": "./src/client.ts"
		},
		"./schema": {
			"types": "./dist/schema.d.ts",
			"default": "./src/schema.ts"
		},
		"./rls": {
			"types": "./dist/rls.d.ts",
			"default": "./src/rls.ts"
		}
	},
	"license": "MIT",
	"scripts": {
		"build": "tsc",
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"dev": "tsc",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"push": "bun with-env drizzle-kit push",
		"migrate": "bun with-env drizzle-kit migrate",
		"generate": "bun with-env drizzle-kit generate",
		"studio": "bun with-env drizzle-kit studio",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false",
		"with-env": "bun --env-file ../../.env --"
	},
	"dependencies": {
		"@vercel/postgres": "^0.10.0",
		"drizzle-orm": "^0.33.0",
		"drizzle-zod": "^0.5.1",
		"postgres": "^3.4.4",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@polaris/eslint-config": "*",
		"@polaris/prettier-config": "*",
		"@polaris/tsconfig": "*",
		"dotenv-cli": "^7.4.2",
		"drizzle-kit": "^0.24.2",
		"eslint": "^9.9.0",
		"prettier": "^3.3.3",
		"typescript": "^5.5.4"
	},
	"prettier": "@polaris/prettier-config"
}
